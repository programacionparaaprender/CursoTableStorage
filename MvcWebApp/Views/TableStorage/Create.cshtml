@model AzureStorage.Models.Product
<h2>Add Product</h2>
<div class="card card-default">
    <div class="card-header"></div>
    <form class="card-body" asp-action="Create" method="post" enctype="application/x-www-form-urlencoded">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control mr-1" asp-for="Name" placeholder="Urun ismi" />
        </div>
        <div class="form-group">
            <label>Price</label>
            <input class="form-control mr-1" asp-for="Price" placeholder="Urun fiyati" />
        </div>
        <div class="form-group">
            <label>Stock</label>
            <input class="form-control mr-1" asp-for="Stock" placeholder="Urun stogu" />
        </div>
        <div class="form-group">
            <label>Color</label>
            <input class="form-control mr-1" asp-for="Color" placeholder="Urun rengi" />
        </div>
        <div class="btn-group" role="group" aria-label="Basic example">
            <input class="btn btn-primary" type="submit" value="Guardar" />
            <input class="btn btn-danger" type="reset" value="Limpiar" />
        </div>
    </form>
</div>

